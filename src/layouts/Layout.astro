---
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'

interface Layout {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/public/golffavi_32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--background: "#FFFAED";
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
